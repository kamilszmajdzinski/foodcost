{
  "expo": {
    "name": "Foodcost",
    "slug": "foodcost",
    "scheme": "app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/app-icon.png",
    "splash": {
      "image": "./src/assets/images/Foodcost.gif",
      "backgroundColor": "#F1E4C3"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": false
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/app-icon.png",
        "backgroundColor": "#F1E4C3"
      },
      "package": "com.haytherecharlie.foodcost"
    },
    "web": {
      "favicon": "./src/assets/images/app-icon.png",
      "bundler": "metro"
    },
    "plugins": ["expo-router"],
    "extra": { "router": { "origin": false } }
  }
}
